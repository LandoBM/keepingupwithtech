{{!-- {{#if logged_in}} --}}
{{!-- <h2>Edit Post</h2> --}}
<h2>{{post.title}}</h2>
<p>{{post.post_text}}</p>
<h4>Existing Comments:</h4>
{{#each comments}}
 <p>{{comment_text}}</p>
{{/each}}
{{!-- {{/each}} --}}

<h3>Comment:</h3>
<form class="comForm">
    <textarea placeholder="Add Comment!" class="commentBody"></textarea>
    <button data-id="{{post.post_id}}" type="submit" class="btn btn-primary commentBody">Add</button>
</form>

<h4>To update post:</h4>
<input class="post-title" placeholder="{{post.title}}"/>
<textarea class="post-text" placeholder="{{post.post_text}}"></textarea>
<button data-id="{{post.post_id}}" type="submit" class="btn btn-primary editPost">Update</button>
{{!-- {{/each}} --}}
{{!-- {{/if}} --}}
<script src="/js/editpost.js"></script>

