{{#if logged_in}}
<div class="row">
  <div class="col-auto">
    <h2>Hi, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>What's on your mind?</h3>

    <form class="form newPost">
      <div class="form-group">
        <label for="post-title">Topic:</label>
        <input class="form-input" type="text" id="post-title" name="post-title" />
      </div>
      <div class="form-group">
        <label for="post-text">Post:</label>
        <textarea class="form-input" type="text" id="post-text" name="post-text" placeholder="What's on your mind..."></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary" data-id="{{id}}">Create Post</button>
      </div>
    </form>
  </div>

  {{#if posts.length}}
  <div class="col-md-6">
    <h3>Feed</h3>
    <h4>Posted by: {{name}}</h4>
    {{#each posts as |post|}}
    {{!-- <ol>
      <li>
        {{post}}
        <a href="/editpost/{{id}}"></a>
      </li>
    </ol> --}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4>
            <a href="/edit-post/{{id}}">
            {{title}} 
            </a>
            <-- click to update post
        </h4>
        <h3>{{post_text}}</h3>
        <h4>{{comments.comment}}</h4>
        <h3>{{date}}</h3>
        {{!-- <p>{{post}}</p>
        <h3>{{date}}</h3> --}}
      </div>
        <div class="col-md-4">
         <button class="btn btn-sm btn-danger deletePost" data-id="{{id}}">Delete</button>
        </div>
          <div class="comForm"><a href="/comment/{{id}}"><button class="btn btn-sm btn-danger" data-id="{{id}}">Add Comment</button></a></div>
        </div>
      </div>
      {{/each}}
      {{else}}
      <p>{{name}} has no Post!</p>
    </div>
    {{!-- <div id="deletePost">
      {{#each comments}}
      <p>{{comment_text}} by {{name}}</p>
      <button class="btn btn-sm btn-danger" id="deletePost" data-id="{{comment_id}}">Delete Comment</button>
      {{/each}}
    </div> --}}
  </div>
  {{!-- {{/each}} --}}
  {{/if}}
</div>
{{/if}}

<script src="./js/newpost.js"></script>
<script src="/js/deletecom.js"></script>
<script src="/js/deletepost.js"></script>